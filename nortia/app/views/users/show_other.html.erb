
<section id = "page-top">
<h1>Users#showother</h1>
<p>Find me in app/views/users/show_other.html.erb</p>
<%=@user%>
<%=@user.name%>

<div class="container-fluid col-md-8 col-md-offset-2">
    <div class= "row-fluid center-block">

      <div class="span1 centering text-center">
          <h2><%=@user.name%>!</h2>

      <!-- <p>Find me in app/views/users/show.html.erb</p> -->



      <div class="span3 centering text-center">
          <div class="row-fluid">
            <%=image_tag(@user.image_url, class: 'img-circle img-responsive', id: 'profile-pic')  %>

              <div class="row-fluid">
                <ul>
              <li>Name <%=@user.name%></li>
              <li>Username <%=@user.username%></li>

              <li>Email <%=@user.email%></li>
              <li>Location <%=@user.zipcode%></li>
              <li>Age <%=@user.age%></li>
              <li>Longitude <%=@user.location_long%></li>
              <li>Latitude <%=@user.location_lat%></li>
                </ul>
              </div>

            <h2>General Availability</h2>
              <li><%@user.availability.each do |day|%></li>
            <li><%=day%></li>
            <%end%>
          </div>
      </div>
  </div>


    <div class="span3 centering text-center">
        <div class= "row-fluid center-block">
            <h2>Skills she has</h2>
        </div>

        <div class="row-fluid center-block">
          <%@user.skills.each do |skill|%>
            <li><%=skill.maincat%></li>
          <%end%>
          <br>
        </div>
    </div>
  </div>
</div>

</section>
