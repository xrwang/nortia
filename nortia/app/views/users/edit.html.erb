<div class="panel-body">
      <%=simple_form_for current_user, url: user_update_path do |f|%>
      <%=f.input :name%>
      <%=f.input :email%>
      <%=f.input :username, :label => "Username (not editable)", :readonly => false%>
      <%=f.input :zipcode%>
      <%=f.input :age%>
      <%= f.input :availability, as: :check_boxes, collection: [['Sunday', 'Sunday'],['Monday', 'Monday'],['Tuesday', 'Tuesday'], ['Wednesday', 'Wednesday'], ['Thursday', 'Thursday'], ['Friday', 'Friday'], ['Saturday', 'Saturday']]%>
      <%= f.submit "Save".html_safe, class: "btn btn-lg"%>
      <%end%>
    </div>



  <div class="panel-body">
    <%current_user.skills.each do |skill|%>
    <li><%=skill.maincat%>
      <%=skill.created_at%>
      <%=skill.updated_at%>
      <%=link_to 'Edit', edit_user_skill_path(skill, current_user), class: 'btn btn-success btn-xs'%></li>
    <%end%>
  </div>
