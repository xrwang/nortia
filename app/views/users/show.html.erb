<section id = "page-top">

  <div class="jumbotron">
      <h2>Hey <%=current_user.name%>!</h2>
      <h2>You're lookin' good today!</h2>
  </div>
  <!-- <p>Find me in app/views/users/show.html.erb</p> -->

</section>
<div class = "container-fluid">
  <div class="row row-layouts">
    <div class="col-md-4 left-dash span3 centering text-center">
      <%=image_tag(current_user.image_url, class: 'img-circle img-responsive', id: 'profile-pic')  %>
      <h4><%=current_user.name%></h4>
      <li><em>Name</em> <%=current_user.name%></li>
      <li><em>Username</em>  <%=current_user.username%></li>

      <li><em>Email</em>  <%=current_user.email%></li>
      <li><em>Location</em>  <%=current_user.zipcode%></li>
      <li><em>Age</em>  <%=current_user.age%></li>
      <li><em>Longitude</em>  <%=current_user.location_long%></li>
      <li><em>Latitude</em>  <%=current_user.location_lat%></li>
    </div>
<!-- WALLET -->
      <div class = "col-md-8 right-layout-dash">
          <h2>Wallet:</h2>
          <h4>Cha-ching! ðŸ’¸ </h4>
          <%=current_user.wallet%>
          <h4>You've got <%=current_user.wallet.balance%> credits</h4>
          <%= link_to 'Generate a credit code', vibe_codes_new_path, class: "btn btn-sm btn-default"%>
          <br>
          <%= link_to 'Redeem a credit code', vibe_codes_test_path, class: "btn btn-sm btn-default"%>

<!-- availability -->
          <h2>General Availability</h2>
            <li><%current_user.availability.each do |day|%></li>
          <li><%=day%></li>
          <%end%>
          <%= link_to 'Edit my profile & Availability', edit_user_path(current_user), class: "btn btn-md btn-default"%>

<!-- SKILLS -->
          <h2>Skills I have</h2>
          <%@skills.each do |skill|%>
            <li><%=skill.maincat%> <%=link_to 'Edit skill', edit_user_skill_path(current_user, skill), class: "btn btn-sm btn-default"%>
          <%end%></li>
          <br>
          <%= link_to 'Add new skill', new_user_skill_path(current_user), class: "btn btn-sm btn-default"%>


<!-- POSTS -->
          <h2>My posts:</h2>
          <%= link_to 'Add new post', new_user_post_path(current_user), class: "btn btn-sm btn-default"%>

          <% current_user.posts.each do |post| %>
            <p>
              <strong>title:</strong><br>
              <%= post.title %><br>
              <strong>body:</strong><br>
              <%= post.body %><br>
              <strong>need by date:</strong><br>
              <%= post.expiration %><br>
            </p>
          <% end %>

      </div>

    </div>

  </div>
</div>










